# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Project Configuration
project_name = "cicd-pipeline"
environment = "dev"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnets = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.10.0/24", "10.0.20.0/24"]

# Security Configuration
# IMPORTANT: Replace with your actual IP address for security
# Get your IP: curl ifconfig.me
allowed_ips = ["YOUR_IP_ADDRESS/32"]  # Example: ["203.0.113.1/32"]

# NOTE: SSH key pair is auto-generated by Terraform (no need to create one manually)

# Instance Types (adjust based on your needs and budget)
jenkins_instance_type = "t3.medium"  # Recommended for Jenkins
app_instance_type = "t3.small"       # Sufficient for demo app

# Jenkins Configuration
# IMPORTANT: Use a strong password
jenkins_admin_password = "YourSecurePassword123!"

# Optional: Uncomment and modify if needed
# vpc_cidr = "172.16.0.0/16"  # Alternative VPC CIDR
# jenkins_instance_type = "t3.large"  # For heavy Jenkins usage
# app_instance_type = "t3.medium"     # For production workloads

grafana_admin_password   = "your-secure-password"
git_repo_url             = "https://github.com/<your-org>/<repo>.git"
monitoring_instance_type = "t3.small"   # optional, this is the default

# Availability Zones (hardcoded to avoid ec2:DescribeAvailabilityZones permission)
availability_zones = ["us-east-1a", "us-east-1b"]

# AMI ID (Amazon Linux 2 in us-east-1, hardcoded to avoid ec2:DescribeImages permission)
# To find the latest: aws ec2 describe-images --owners amazon --filters "Name=name,Values=amzn2-ami-hvm-*-x86_64-gp2" --query 'sort_by(Images,&CreationDate)[-1].ImageId' --region us-east-1
ami_id = "ami-0c02fb55956c7d316"
